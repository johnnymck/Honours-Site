<form action='{{ actionurl }}/{{ id }}' method='post' enctype="multipart/form-data">
    <label for="county">County</label>
    <input type="text", name="county" value="{{ property.county }}" /><br>
    <label for="country">Country</label>
    <input type="text", name="country" value="{{ property.country }}" /><br>
    <label for="town">Town</label>
    <input type="text", name="town" value="{{ property.town }}"/><br>
    <label for="postcode">Postcode</label>
    <input type="text", name="postcode" value="{{ property.postcode }}" /><br>
    <label for="description">Description</label>
    <input type="textarea" name="description" value="{{ property.description }}"/><br>
    <label for="displayable_address">Displayable Address</label>
    <input type="text" name="displayable_address" value="{{ property.displayable_address }}" /><br>
    <label for='image'>Image:</label>
    <input type="file" name="image" value='{{ property.image }}'><br>
    <label for="no_bedrooms">Number of Bedrooms</label>
    <select name="no_rooms">
    <!-- <option value="1" <?= $row['no_rooms'] == 1 ? 'selected' : ''?>>1</option> -->
        <option value="1" {% if property.no_rooms == '1' %}{{ 'selected' }}{% endif %}>1</option>
