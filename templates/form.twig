        <option value="3" {% if property.no_rooms == '3' %}{{ 'selected' }}{% endif %}>3</option>
        <option value="4" {% if property.no_rooms == '4' %}{{ 'selected' }}{% endif %}>4</option>
        <option value="5" {% if property.no_rooms == '5' %}{{ 'selected' }}{% endif %}>5</option>
        <option value="6" {% if property.no_rooms == '6' %}{{ 'selected' }}{% endif %}>6</option>
        <option value="7" {% if property.no_rooms == '7' %}{{ 'selected' }}{% endif %}>7 or more</option>
    </select><br>
    <label for="no_bathrooms">Number of Bathrooms</label>
    <select name="no_bathrooms">
        <option value="1" {% if property.no_bathrooms == '1' %}{{ 'selected' }}{% endif %}>1</option>
        <option value="2" {% if property.no_bathrooms == '2' %}{{ 'selected' }}{% endif %}>2</option>
        <option value="3" {% if property.no_bathrooms == '3' %}{{ 'selected' }}{% endif %}>3</option>
        <option value="4" {% if property.no_bathrooms == '4' %}{{ 'selected' }}{% endif %}>4</option>
        <option value="5" {% if property.no_bathrooms == '5' %}{{ 'selected' }}{% endif %}>5</option>
        <option value="6" {% if property.no_bathrooms == '6' %}{{ 'selected' }}{% endif %}>6</option>
        <option value="7" {% if property.no_bathrooms == '7' %}{{ 'selected' }}{% endif %}>7 or more</option>
    </select><br>
    <label for="price">Price</label>
    <input type="text", name="price" value="{{ property.price }}" /><br>
    <label for="type">Property Type</label>
    <select name="type">
        <option value="house" {% if property.type == 'house' %}{{ 'selected' }}{% endif %}>House</option>
        <option value="flat" {% if property.type == 'flat' %}{{ 'selected' }}{% endif %}>Flat</option>
    </select><br>
    <!-- TODO: RADIO BUTTONS SUBMIT NO VALUE APARENTLY :/ -->
    <input type="radio" id="sale"
    name="sale" value="1" {% if property.sale == 1 %}{{ 'checked' }}{% endif %}>
    <label for="sale">Sale</label>
    <input type="radio" id="rent"
    name="sale" value="0" {% if property.sale == 0 %}{{ 'checked' }}{% endif %}>
    <label for="rent">Rent</label><br>
    <input type="hidden" name="id" value="<?= $id ?>" />
    <label for="latitude">Latitude</label>
    <input type="text" name="latitude" value="{{ property.latitude }}"><br>
    <label for="longitude">Longitude</label>
    <input type="text" name="longitude" value="{{ property.longitude }}"><br>
    <input type="submit" value="submit" />
    <input type="button" value = "cancel" onclick="window.location.href='/admin'" />
</form>